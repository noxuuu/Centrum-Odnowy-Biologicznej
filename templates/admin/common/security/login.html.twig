{% extends 'admin/common/security/base.html.twig' %}

{% block title %}LOGOWANIE{% endblock %}
{% block bodyclass %}class="background show-spinner"{% endblock %}
{% block body %}
    <div class="fixed-background"></div>
    <main>
        <div class="container">
            <div class="row h-100">
                <div class="col-12col-md-10 mx-auto my-auto">
                    <div class="card auth-card">
                        <div class="position-relative login-image d-flex">
                            <p class="text-white font-weight-bold h2 align-self-center login-form">ODKRYJ PRAWDZIWE PIĘKNO</p>
                        </div>
                        <div class="form-side">
                            <h2 class="mb-5 text-center">Logowanie :: Panel Administracyjny</h2>

                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            {% if error %}
                                <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <form action="{{ path('app_login') }}" method="post">
                                <label class="form-group has-float-label mb-4">
                                    <input class="form-control" type="text" id="username" name="email" value="{{ last_username }}" />
                                    <span>E-mail</span>
                                </label>

                                <label class="form-group has-float-label mb-4">
                                    <input class="form-control" type="password" id="password" name="password" />
                                    <input type="hidden" name="_target_path" value="/" />
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <span>Hasło</span>
                                </label>
                                <div class="d-flex justify-content-between align-items-center">
                                    <button class="btn btn-primary btn-lg btn-shadow" type="submit">ZALOGUJ</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
