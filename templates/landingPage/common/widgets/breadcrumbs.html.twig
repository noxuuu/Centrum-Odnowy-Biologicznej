<header class="container-fluid page-banner-area">
    <div class="d-flex align-items-center justify-content-center page-banner-area-breadcrumbs">
        <div class="page-banner-content">
            <h2 class="align-self-center text-center">{{ pageTitle }}</h2>
            <ul>
                {% for breadcrumb in breadcrumbs %}
                    <li>
                        <a href="{{ breadcrumb[1] }}">{{ breadcrumb[0] }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="page-banner-shape"><img alt="image" src="{{ asset('assets/images/page-banner/shape_ltr.png') }}"></div>
</header>
